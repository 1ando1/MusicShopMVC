@model Music_Shop.Models.Guitar;

<h1>Edit Guitar</h1>
<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Type" class="form-label">Type</label>
        <input asp-for="Type" class="form-control">
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Color" class="form-label">Color</label>
        <input asp-for="Color" class="form-control">
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="ExtraProductsId" class="form-label">Extra Products</label>
        <select asp-for="ExtraProductsId" asp-items="@ViewBag.ExtraProdsList" class="form-control"></select>
        <span asp-validation-for="ExtraProductsId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="ImagePath" class="form-label">Image URL</label>
        <input asp-for="ImagePath" class="form-control">
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-outline-danger w-100">Cancel</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-outline-primary w-100">Edit</button>
    </div>
</form>