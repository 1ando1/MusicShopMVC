@model List<Music_Shop.ViewModels.GuitarCardViewModel>;
@{
    string prodImgPlaceholder = @"data:image/png;base64,";
}

<div class="text-center">
    <h1 class="display-4">Popular Products</h1>
    <hr />
    <p>Guitars</p>
    <div class="row row-cols-2 row-cols-lg-4 g-3 align-items-stretch">
        @foreach (var i in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@(i.Guitar.ImagePath ?? prodImgPlaceholder)" class="card-img-top prod-image" alt="ProdImg">
                    <div class="card-body">
                        <h5 class="card-title">@i.Guitar.Name</h5>
                        <p class="card-text">Price: @i.Guitar.Price$</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Guitars" asp-action="Details" asp-route-id="@i.Guitar.Id" class="btn btn-outline-secondary">Details</a>
                        @if (!i.IsInCard)
                        {
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@i.Guitar.Id" class="btn btn-outline-primary">Add to Cart</a>
                        }
                        else
                        {
                            <a asp-controller="Cart" asp-action="Remove" asp-route-id="@i.Guitar.Id" class="btn btn-outline-secondary">Remove from Cart</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>